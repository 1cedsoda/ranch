// make entity Chat which has an id, a list of messages and a userId

datasource db {
    provider = "mongodb"
    url      = "mongodb://root:password@host.docker.internal:8083/ranch"
}

generator client {
    provider = "prisma-client-js"
}

model Chat {
    id        String    @id @default(cuid()) @map("_id")
    messages  Message[]
    userId    String
    timestamp DateTime  @default(now())
    title     String?
}

type Message {
    text      String
    timestamp DateTime      @default(now())
    sender    MessageSender
}

enum MessageSender {
    USER
    BOT
}
